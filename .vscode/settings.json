{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": { "when": "$(basename).ts" },
    "**/*.js*": { "when": "$(basename).tsx" },
    "**/*.d.ts": { "when": "$(basename).ts" },
    "**/*.d.ts*": { "when": "$(basename).tsx" }
  }
}
